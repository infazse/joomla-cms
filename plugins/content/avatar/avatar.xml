<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin"  group="content"> 

<name>plg_content_avatar</name>
<creationDate>20/8/2013</creationDate>
<author>Mohamed Infaz</author>
<files>
    <filename plugin="avatar">avatar.php</filename>
    <filename>index.html</filename>
</files>
<authorEmail>infaz9999@gmail.com</authorEmail>
<authorUrl>www.cricketpissa.blogspot.com</authorUrl>
<version>3.0.0</version>
<copyright>Copyright information</copyright>

<languages>
		<language tag="en-GB">en-GB.plg_content_avatar.ini</language>
		<language tag="en-GB">en-GB.plg_content_avatar.sys.ini</language>
</languages>
<config>
	<fields name="params">
            <fieldset name="basic" label="JGLOBAL_FIELDSET_BASIC">
                <field name="size" description="PLG_CONTENT_AVATAR_SIZE_DESC" label="PLG_CONTENT_AVATAR_SIZE" type="Text">
                </field>
                
                <field name="default_avatar" description="PLG_CONTENT_AVATAR_DEFAULT_DESC" label="PLG_CONTENT_AVATAR_DEFAULT" type="List">
                    <option value="404">PLG_CONTENT_AVATAR_AVATARS_404</option>
                    <option value="mm">PLG_CONTENT_AVATAR_AVATARS_MM</option>
                    <option value="identicon">PLG_CONTENT_AVATAR_AVATARS_IDENTICON</option>
                    <option value="monsterid">PLG_CONTENT_AVATAR_AVATARS_MONSTERID</option>
                    <option value="wavatar">PLG_CONTENT_AVATAR_AVATARS_WAVATAR</option>
                    <option value="retro">PLG_CONTENT_AVATAR_AVATARS_RETRO</option>
                    <option value="blank">PLG_CONTENT_AVATAR_AVATARS_BLANK</option>
                </field>
                <field name="show_profileinfo" description="PLG_CONTENT_AVATAR_PROFILE_DESC" label="PLG_CONTENT_AVATAR_PROFILE_LABEL" type="list">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="style" description="PLG_CONTENT_AVATAR_IMAGE_STYLE_DESC" label="PLG_CONTENT_AVATAR_IMAGE_STYLE_LABEL" type="List">
                    <option value="">PLG_CONTENT_AVATAR_IMAGE_NONE</option>
                    <option value="img-rounded">PLG_CONTENT_AVATAR_IMAGE_ROUNDED</option>
                    <option value="img-circle">PLG_CONTENT_AVATAR_IMAGE_CIRCLE</option>
                    <option value="img-polaroid">PLG_CONTENT_AVATAR_IMAGE_POLOROID</option>
                </field>
                
                <field name="alignment" description="PLG_CONTENT_AVATAR_IMAGE_ALIGNMENT" label="PLG_CONTENT_AVATAR_IMAGE_ALIGNMENT_LABEL" type="List">
                    
                    <option value="">PLG_CONTENT_AVATAR_IMAGE_ALIGNMENT_NONE</option>
                    <option value="pull-left">PLG_CONTENT_AVATAR_IMAGE_ALIGNMENT_LEFT </option>
                    <option value="pull-right">PLG_CONTENT_AVATAR_IMAGE_ALIGNMENT_RIGHT</option>
                
                </field>
                </fieldset>
                
                <fieldset name="Advanced" label="JGLOBAL_FIELDSET_ADVANCED">
                <field name="avatar_http" description="PLG_CONTENT_AVATAR_HTTP" label="PLG_CONTENT_AVATAR_HTTP_LABEL" type="Text"></field>
                <field name="profile_http" description="PLG_CONTENT_AVATAR_PROFILE_HTTP" label="PLG_CONTENT_AVATAR_PROFILE_HTTP_LABEL" type="Text"></field>
                <field name="avatar_https" description="PLG_CONTENT_AVATAR_HTTPS" label="PLG_CONTENT_AVATAR_HTTPS_LABEL" type="Text"></field>
                <field name="profile_https" description="PLG_CONTENT_AVATAR_PROFILE_HTTPS" label="PLG_CONTENT_AVATAR_PROFILE_HTTPS_LABEL" type="Text"></field>
                <field name="check_curl" type="list" label="PLG_CONTENT_AVATAR_CURL_LABEL" description="PLG_CONTENT_AVATAR_CURL_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                </fieldset>
	</fields>
</config>
<description>PLG_CONTENT_AVATAR_XML_DESCRIPTION</description>
</extension>